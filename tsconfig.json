{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictPropertyInitialization": true,
        "baseUrl": "./",
        "paths": {
            "@utils": [
                "src/utils/index.ts"
            ],
            "@types": [
                "src/types/index.d.ts"
            ],
            "@services": [
                "src/services/index.ts"
            ],
            "@schemas": [
                "src/schemas/index.ts"
            ],
            "@logger": [
                "src/shared/logger.ts"
            ],
            "@constants": [
                "src/shared/index.ts"
            ],
            "@errorHelper": [
                "src/shared/index.ts"
            ],
            "@enums": [
                "src/shared/enums/index.ts"
            ],
            "@controllers": [
                "src/controllers/index.ts"
            ],
            "@middlewares": [
                "src/middlewares/index.ts"
            ],
            "@statusCode": [
                "src/shared/status-code.ts"
            ],
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}